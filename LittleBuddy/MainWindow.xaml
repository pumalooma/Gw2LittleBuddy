<Window x:Class="LittleBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LittleBuddy"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed"
        Topmost="True">
    <Grid>
        <Button x:Name="btnClient" Content="Client" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnClient_Click"/>
        <Button x:Name="btnServer" Content="Server" HorizontalAlignment="Left" Margin="104,10,0,0" VerticalAlignment="Top" Width="75" Click="btnServer_Click"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="53,57,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="txtLog" TextWrapping="Wrap" Text="TextBox" Margin="10,124,8,10" IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <CheckBox x:Name="checkAlwaysOnTop" Content="Always on Top" HorizontalAlignment="Left" Margin="279,103,0,0" VerticalAlignment="Top" Checked="checkAlwaysOnTop_Checked"/>

    </Grid>
</Window>
